#!/usr/bin/env node


var TASKS = {
  init: true,
  add: true
}


var argv = require('minimist')(process.argv.slice(2), { '--': true });

var task = argv._[0];

if (!TASKS[task]) {
  return console.log(TASKS);
}

var config = {
  cwd: process.cwd()
}

var args = argv._.slice(1);

args.push(config);


if (!TASKS[task]) {
  console.log(TASKS);
} else {

  require('../src/cmd/' + task).apply(null, args)
    .then(function () {
      console.log('git group', process.cwd(), argv._, argv['--']);
    })
    .fail(console.error);
}



